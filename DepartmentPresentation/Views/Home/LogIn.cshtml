@{
    ViewData["Title"] = "Log in";
}

<div class="text-center">
    <h1 class="display-4">@ViewBag.Message</h1>

    <form method="post" action="~/Home/LogIn">
        <div>               
            <div>
                <label for="login">Емейл:</label>
                <input type="email" placeholder="Enter email" name="login" required>
            </div>
            
            <div>
                <label for="password">Пароль:</label>
                <input type="password" placeholder="Enter password" name="password" required>
            </div>            
        </div>
        <button type="submit" class="button">Log in</button>
    </form>

    <a class="button" asp-area="" asp-controller="Home" asp-action="Registration">Реєстрація</a>
</div>
